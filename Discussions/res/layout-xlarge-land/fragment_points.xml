<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/points_layout_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/points_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical" >

        <include layout="@layout/merge_points_user_list" />

        <include layout="@layout/merge_points_other_list" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout_details"
        style="@style/listViewBackgroundStyle"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.65" />

</LinearLayout>