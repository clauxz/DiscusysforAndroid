<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/points_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/user_points_listview_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center_vertical"
            android:paddingBottom="8dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="8dip"
            android:singleLine="true"
            android:text="@string/text_current_user_points"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/other_user_points_listview_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_points_listview_header"
            android:layout_toLeftOf="@id/user_points_listview_header"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center_vertical"
            android:paddingBottom="8dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="8dip"
            android:singleLine="true"
            android:text="@string/text_other_users_points"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/user_points_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawSelectorOnTop="false" >
        </ListView>

        <ListView
            android:id="@+id/other_user_points_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/other_user_points_listview_header"
            android:layout_weight="1"
            android:drawSelectorOnTop="false" >
        </ListView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/fragment_empty_points"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/fragment_empty_points"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </TableRow>

</TableLayout>