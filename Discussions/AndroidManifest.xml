<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slobodastudio.discussions"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.old.UsersActivity"
            android:label="@string/activity_name_users" >
        </activity>
        <activity
            android:name=".ui.old.DiscussionsActivity"
            android:label="@string/activity_name_discussions" >
        </activity>
        <activity
            android:name=".ui.old.TopicsActivity"
            android:label="@string/activity_name_topics" >
        </activity>
        <activity
            android:name=".ui.old.PointsActivity"
            android:label="@string/activity_name_points" >
        </activity>
        <activity
            android:name=".photon.DiscussionBoardPhotonActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.BaseListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".photon.PhotonService" />

        <provider
            android:name=".data.provider.DiscussionsProvider"
            android:authorities="com.slobodastudio.discussions"
            android:exported="false" />
    </application>

</manifest>